{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "../dist/cjs",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "../dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../src/**/*.test.ts", "../src/**/*.test-d.ts"]
}
